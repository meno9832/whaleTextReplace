{
    "manifest_version": 3,
    "name": "텍스트변환",
    "version": "1.0",
    "description": "붙여넣기 시 텍스트를 자동으로 바꾸는 도구입니다.",
    "icons": {
      "48": "icons/icon48.png"
    },
    "permissions": ["storage"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "options.html",
      "default_icon": {
        "48": "icons/icon48.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "options_page": "options.html"
  }